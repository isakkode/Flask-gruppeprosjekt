{% extends 'base.html.j2 '%}

{% block body %} 

<h2> Return car </h2>

<form method="post">
<label for="customer_id">Customer_ID:</label>
<input type="text" id="customer_id" name="customer-id">
<label for="car_id">Car_ID:</label>
<input type="text" id="car_id" name="car-id">
<label for="status">Status:</label>
<input type="text" id="status" name="status">
<input type="submit" value="Submit">
</form>

{% if data == None %}
<h3> Waiting for submission of details. </h3>
{% elif data == False %}
<h3> Cannot return this car, this customer has not rented it </h3>
{% else %}
<h3> Car returned! </h3>
{% endif %}

{% endblock %}